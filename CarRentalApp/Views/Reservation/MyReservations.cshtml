@model IEnumerable<CarRentalApp.Models.Reservation>

@{
    ViewData["Title"] = "Moje Rezerwacje";
}

<h1>Moje Rezerwacje</h1>

<table class="custom-table">
    <thead>
        <tr>
            <th>Samochód:</th>
            <th>Od kiedy:</th>
            <th>Do kiedy:</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Car.Make @item.Car.Model</td>
            <td>@item.StartDate.ToShortDateString()</td>
            <td>@item.EndDate.ToShortDateString()</td>
                <td style="text-align: center;">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Informacje</a> |
                    <a asp-action="Cancel" asp-route-id="@item.Id" class="btn btn-warning">Anuluj</a>

            </td>
        </tr>
}
    </tbody>
</table>