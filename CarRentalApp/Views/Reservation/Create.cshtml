@model CarRentalApp.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Stwórz rezerwację:</h1>

<h4>Rezerwacja</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Wybór samochodu -->
            <div class="form-group">
                <label asp-for="CarId">Samochód</label>
                <select asp-for="CarId"
                        asp-items="ViewBag.Cars"
                        class="form-control"
                        id="carSelect">
                    <option value="">-- wybierz samochód --</option>
                </select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>

            <!-- Start rezerwacji -->
            <div class="form-group">
                <label asp-for="StartDate">Od kiedy:</label>
                <input asp-for="StartDate"
                       type="text"
                       class="form-control"
                       id="startDate" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <!-- Koniec rezerwacji -->
            <div class="form-group">
                <label asp-for="EndDate">Do kiedy:</label>
                <input asp-for="EndDate"
                       type="text"
                       class="form-control"
                       id="endDate" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <input type="submit" value="Rezerwuj" class="btn btn-primary" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <!-- Przekazanie danych z C# do JS -->
    <script>
        window.blockedDates = @Html.Raw(
                    System.Text.Json.JsonSerializer.Serialize(
                            ViewBag.BlockedDates ?? new List<string>()
                    )
            );
</script>

    <script src="~/js/reservation.js"></script>
}
