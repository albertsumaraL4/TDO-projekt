@model CarRentalApp.Models.Car

@{
    ViewData["Title"] = "Details";
}

<h1>Informacje o samochodzie.</h1>

<div>
    <h4>Samochody.</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Marka:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class = "col-sm-2">
            Model:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            Rok produkcji:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            Cena za dzień:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PricePerDay)
        </dd>
        <dt class = "col-sm-2">
            Typ pojazdu:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarCategory.Name)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a>
    }
    <a asp-action="Index">Powrót</a>
</div>
