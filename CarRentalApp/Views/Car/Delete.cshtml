@model CarRentalApp.Models.Car

@{
    ViewData["Title"] = "Delete";
}

<h1>Do usunięcia:</h1>

<h3>Czy na pewno chcesz usunąć ten samochód?</h3>
<div>
    <h4>Samochody.</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Marka:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class = "col-sm-2">
            Model:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            Rok produkcji:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            Cena za dzień:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PricePerDay)
        </dd>
        <dt class = "col-sm-2">
            Typ pojazdu:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarCategory.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    </form>
</div>
